.list {
  padding: 0rpx 24rpx;
}

.list .row {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 26rpx 0;
  border-bottom: 1rpx solid rgba(237, 237, 237, 1);
}

.list .row .tit, .list .row input {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  line-height: 40rpx;
}

.list .row .other1 {
  padding-left: 58rpx;
}

.ph {
  font-weight: 300;
}

.list .row.special {
  justify-content: space-between;
  align-content: center;
}

.list .row .spe-left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.row .icon1 {
  width: 26rpx;
  height: 30rpx;
  padding-left: 30rpx;
}

.row .icon2 {
  width: 18rpx;
  height: 28rpx;
}

.list .row .other {
  padding-left: 58rpx;
}

.list .row .other2 {
  padding-left: 12rpx;
  width: 430rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.list .row .other3 {
  padding-left: 30rpx;
}

/* 自定义单选 */

.row .rig {
  display: flex;
  align-items: center;
  margin-left: 42rpx;
}

.row .rig .pub {
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-radius: 27rpx;
  padding: 7rpx 30rpx;
  margin-left: 42rpx;
}

.row .rig .colorgreen {
  background: #91d5ad;
}

.row .rig .colorgrey {
  background: #e5e5e7;
}

.row .rig .pub image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 18rpx;
}

.row .rig .pub text {
  height: 40rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 40rpx;
}

.button {
  left: 0;
  right: 0;
  text-align: center;
  line-height: 90rpx;
  margin: 0px auto;
  margin-top: 40rpx;
  width: 560rpx;
  height: 90rpx;
  background-color: #91d5ad;
  border-radius: 45rpx;
  color: #fff;
  font-size: 32rpx;
  display: flex;
  justify-content: center;
}

.button::after {
  border: none;
}

.button2{
  background-color: #fff;
  color: #91d5ad;
  border: 2rpx solid rgba(145,213,173,1);
}