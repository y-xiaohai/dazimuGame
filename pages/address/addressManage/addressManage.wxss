  flex-direction: column;
  align-items: center;
  margin: 50% auto;
}
.notaddress image{
  display: block;
  width: 289rpx;
  height: 258rpx;
  margin: auto;
}
.notaddress .warning{
  width: 308rpx;
  height:90rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
