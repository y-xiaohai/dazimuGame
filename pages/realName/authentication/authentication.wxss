page{
  background-color: #F0F0F0;
  padding: 0rpx 24rpx; 
  width: 702rpx;
}

.title{
  margin-top: 36rpx;
  height: 48rpx;
  font-size: 34rpx;
  font-family:PingFangSC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:48rpx;
  letter-spacing:2rpx;
}

#info{
  background: #fff;
  margin-top: 26rpx;
  border-radius: 8rpx;
}

/* 头像部分 */
.row{
  display: flex;
  justify-items: center;
  align-items: center;
  justify-content: space-between;
  margin: 0rpx 20rpx;
  padding-top: 30rpx;
  padding-bottom: 30rpx;
}
.row>text{
  height:45rpx;
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:45rpx;
  letter-spacing:2rpx;
}
.row .rig{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.row .rig .user-img{
  width:93rpx;
  height:93rpx;
  background:rgba(216,216,216,1);
  border-radius: 50%;
  display: block;
  margin-right: 28rpx;
}
.row .rig .arrow{
  width: 18rpx;
  height: 18rpx;
  border-top: 2rpx solid #C6C6C6;
  border-right: 2rpx solid #C6C6C6;
  transform: rotate(45deg);
  margin-right: 4rpx;
}

.line{
  width:702rpx;
  height:1rpx;
  background:rgba(237,237,237,1);
}

/* 性别部分 */
.row .rig .pub{
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-radius:27rpx;
  padding: 7rpx 32rpx;
  margin-left: 42rpx;
}
.row .rig .colorgreen{
  background: #91D5AD;
}
.row .rig .colorgrey{
  background: #E5E5E7;
}
.row .rig .pub image{
  width:24rpx;
  height:24rpx;
  margin-right: 18rpx;
}
.row .rig .pub text{
  height:40rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:40rpx;
}

#card-box{
  background: #fff;
  margin-top: 26rpx;
  border-radius: 8rpx;
  overflow: hidden;
}
.card{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 26rpx 20rpx;
}

.out{
  border: 2rpx dashed #C3DDCE; 
  display: inline-block;
  padding: 6rpx;
  border-radius:8rpx;
  position: relative;
}

.out .back{
  width:308rpx;
  height:186rpx;
  background:rgba(234,245,238,1);
  border-radius:4rpx;
  border: none;
  display: block;
}
.out .camera{
  width: 100rpx;
  height: 100rpx;
  position: absolute;
  left: 115rpx;
  top: 50rpx;
}

.hint {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 20rpx;
}

.hint text{
  height:33rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(102,102,102,1);
  line-height:33rpx;
  text-align: center;
}


.foot{
  margin-top: 36rpx;
  padding-bottom: 30rpx;
}
.foot .xian{
  width:702rpx;
  height:1rpx;
  background:rgba(237,237,237,1);
  margin: 30rpx 0;
}
.foot .item{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 20rpx;
}
.foot .item text{
  height:45rpx;
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:45rpx;
  letter-spacing:2rpx;
}

.foot .item .inp{
  height:45rpx;
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:45rpx;
  letter-spacing:2rpx;
  text-align: right;
  padding-left: 120rpx;
}


.after {
  text-align: center;
}

.after .button {
  width: 128rpx;
  height: 45rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 45rpx;
  background: #91d5ad;
  padding: 23rpx 216rpx 22rpx;
  border-radius: 45rpx;
  margin: 0 auto;
  margin-top: 56rpx;
}

.after .prom {
  height:33rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:33rpx;
  letter-spacing:1rpx;
  margin-top: 20rpx;
}