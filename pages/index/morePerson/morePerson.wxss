page{
  background: #f2f2f2;
}

.container{
  background: #fff;
  padding: 0 24rpx;
  /* padding-top: 11rpx; */
}

.container .row{
  height: 116rpx;
  padding: 26rpx 0;
  border-bottom: 1rpx solid #ededed;
  display: flex;
  justify-content: space-between;
}

/* 最后一个不要线 */
.container .noline{
  border-bottom: none;
}

.row .left{
  display: flex;
}

.row .left .img-view{
  display: block;
  width: 116rpx;
  height: 116rpx;
  border-radius: 25rpx;
}

.row .left .inter-view{
  margin-left: 40rpx;
}

.row .left .inter-view .mid-top{
  height:49rpx;
  font-size:35rpx;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(51,51,51,1);
  line-height:49rpx;
  margin-top: 8rpx;
}

.row .left .inter-view .mid-bottom{
  height:46rpx;
  font-size:26rpx;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:46rpx;
  margin-top: 10rpx;

  /* 加的限制 */
  width: 380rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.row .right{
  padding: 33rpx 0;
}

.row .right button{
  width:130rpx;
  height:50rpx;
  background:rgba(145,213,173,1);
  border-radius:25rpx;
  font-size:28rpx;
  font-family:PingFangSC;
  font-weight:400;
  line-height: 50rpx;
  color:rgba(255,255,255,1);
}

.row .right button::after{
  border: none;
}

/* 尾部提示文字 */
.dbts{
  background: #f2f2f2;
  width: 100%;
  height: 100%;
  text-align: center;
}
.dbts .inner-bg{
  display: inline-flex;
  height: 105rpx;
}
.dbts .inner-bg .tswz{
  height:33rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(153,153,153,1);
  line-height:33rpx;
  letter-spacing:1rpx;
  margin: 36rpx 20rpx;
}

.dbts .inner-bg .xt-left,.dbts .inner-bg .xt-right{
  width:150rpx;
  height:1rpx;
  background:rgba(216,216,216,1);
  margin: 52rpx 0;
}
