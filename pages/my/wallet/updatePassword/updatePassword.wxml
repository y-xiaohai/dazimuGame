<view>
  <view class="clues">{{clues}}</view>
  <view class='content'>
    <block wx:for="{{number}}" wx:key="item">
      <input class='ipt1' disabled password='{{password}}' value="{{content.length>=index+1?content[index]:''}}" catchtap='tap'></input>
    </block>
  </view>
  <input class='ipt2' name='password' type="number" password="{{true}}" maxlength="{{number}}" focus="{{isFocus}}" bindinput="inputcon"></input>
  <view class="forget" bindtap='forget'>忘记密码？</view>
  <view class="btn">
    <button disabled='{{disabled}}' bindtap='confirm'>确认</button>
  </view>

</view>