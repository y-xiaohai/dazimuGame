page{
  background: #fff;
}
/* 初始化 */
button::after,input{
  border: none;
}

.wall{
  padding: 0rpx 24rpx;
  padding-top: 10rpx; 
}
.ph{
  color:#999;
}
.wall input{
  margin-top: 36rpx;
  background:rgba(247,247,247,1);
  border-radius:12rpx;
  height:80rpx;
  line-height:80rpx;
  font-size:28rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(51,51,51,1);
  padding-left: 20rpx;
}
.wall .row-box{
  width: 702rpx;
  display: flex;
  flex-direction: row;
}
.wall .row-box .left-input{
  width: 436rpx;
}
.wall .row-box .right-button{
  width: 246rpx;
  margin-left: 20rpx;
  margin-top: 36rpx;
  height:80rpx;
  font-size:28rpx;
  font-family:PingFangSC-Light;
  font-weight:300;
  color:rgba(153,153,153,1);
  line-height:80rpx;
}
.wall .button-box{
  margin-top:136rpx;
}
.wall .button-box button{
  width:436rpx;
  height:90rpx;
  line-height: 90rpx;
  background: #D6D6D6;
  border-radius:45rpx;
  font-size:32rpx;
  font-family:PingFangSC-Regular;
  font-weight:400;
  color:rgba(255,255,255,1);
}
.wall .row-box .green,
.wall .button-box .green{
  background:rgba(145,213,173,1);
  color:rgba(255,255,255,1);
}