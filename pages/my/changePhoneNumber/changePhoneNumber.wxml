<view class="wall">
  <input type='number' placeholder="请输入原手机号" maxlength='11' placeholder-class='ph' bindinput='inputOldPhone' disabled="{{isDisableA}}" value="{{inputOld}}"></input>

  <input type='number' placeholder="请输入新手机号" maxlength='11' placeholder-class='ph' bindinput='inputNewPhone' disabled="{{isDisableB}}" value="{{inputNew}}"></input>

  <view class="row-box">
    <input class="left-input" type='number' placeholder="请输入您的验证码" disabled="{{isDisableC}}" placeholder-class='ph' maxlength='4' bindinput='inputCode'></input>
    <button class="right-button {{color1?'green':''}}" disabled="{{disable1}}" bindtap='sendVerifCode'>{{clues}}</button>
  </view>

  <view class="button-box">
    <button class="{{color2?'green':''}}" formType="submit" disabled="{{disable2}}" bindtap='confChange'>确定</button>
  </view>
</view>