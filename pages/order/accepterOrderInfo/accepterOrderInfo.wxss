  margin-top: 2rpx;
}

.details-bottom .tubiao {
  width: 76rpx;
  height: 22rpx;
  border: 2rpx solid #33aa13;
  border-top: none;
  margin: 0 auto;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 图标里的横线 */
.details-bottom .tubiao>view {
  width: 52rpx;
