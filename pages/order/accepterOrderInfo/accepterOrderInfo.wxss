}

.details-bottom .xq {
  padding-top: 30rpx;
  padding-bottom: 30rpx;
  height: 42rpx;
  text-align: center;
  font-size: 30rpx;
  color: rgba(145, 213, 173, 1);
  line-height: 42rpx;
}

.hidden {
